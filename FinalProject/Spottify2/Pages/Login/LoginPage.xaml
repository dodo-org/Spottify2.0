<!-- LoginPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spottify2.Pages.Login.LoginPage"
             xmlns:local="clr-namespace:Spottify2.ViewModels"
             xmlns:lang="clr-namespace:Spottify2.Resources.Languages.LoginRegistration"
             xmlns:btns="clr-namespace:Spottify2.Resources.Languages.Buttons"
             >

    <StackLayout Padding="30">
        <Label Text="{x:Static lang:LoginRegistration.Wellcome_Msg}" FontSize="Large" HorizontalOptions="Center" />

        <Entry x:Name="UserNameEntry" Text="{Binding UserName}" Placeholder="Benutzername" />
        <Entry x:Name="PasswordEntry" Text="{Binding Password}" Placeholder="Passwort" IsPassword="True" />

        <Button Text="{x:Static btns:Buttons.Login}" Command="{Binding LoginCommand}" />

        <Label Text="{x:Static lang:LoginRegistration.NoAccount_Msg}" FontSize="Medium" HorizontalOptions="Center" />
        <Button Text="{x:Static btns:Buttons.Register}" Command="{Binding RegisterCommand}" />
    </StackLayout>
</ContentPage>