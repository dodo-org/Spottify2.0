<!-- RegisterPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spottify2.Pages.Login.RegisterPage"
             xmlns:local="clr-namespace:Spottify2.ViewModels"
             Title="NewPage1">

    <StackLayout Padding="30">
        <Label Text="Registrierung" FontSize="Large" HorizontalOptions="Center" />

        <Entry x:Name="UsernameEntry" Text="{Binding UserName}" Placeholder="Benutzername" />
        <Entry x:Name="EmailEntry" Text="{Binding Email}" Placeholder="Email" />
        <Entry x:Name="PasswordEntry" Text="{Binding Password}" Placeholder="Passwort" IsPassword="True" />
        <Entry x:Name="ConfirmPasswordEntry" Text="{Binding ConfirmPassword}" Placeholder="Passwort bestÃ¤tigen" IsPassword="True" />

        <Button Text="Registrieren" Command="{Binding RegisterCommand}" />
    </StackLayout>
</ContentPage>