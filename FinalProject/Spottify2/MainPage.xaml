<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Spottify2.Pages.LayoutElements"
             x:Class="Spottify2.MainPage">

    <Grid RowDefinitions="Auto,* ,Auto">
        <!-- Header -->
        <local:HeaderComponent Grid.Row="0"/>

        <!-- Main View (dynamischer Bereich) -->
        <ContentView x:Name="MainViewContainer" Grid.Row="1"/>

        <!-- Footer -->
        <local:FooterComponent Grid.Row="2"/>
    </Grid>

</ContentPage>
